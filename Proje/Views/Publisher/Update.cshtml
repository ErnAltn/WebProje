@model Proje.Models.Domain.Publisher
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Yayın Evi Düzenle</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="PublisherName">Yayın Evi Adı *</label>
                    <input type="text" class="form-control" asp-for="PublisherName" />
                    <span asp-validation-for="PublisherName" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Kaydet</button>
                    <a href="/Publisher/GetAll" class="btn btn-primary"> <i class="bi bi-list"></i>Yayın Evi Listesi</a>
                </div>

            </form>
        </div>
    </div>
</div>

