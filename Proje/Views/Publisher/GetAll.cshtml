@model IEnumerable<Proje.Models.Domain.Publisher>
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Publisher/Add">Daha Fazla Ekle</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Yayın Evleri</h3>

            <table class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Yayın Evi Adı</th>
                        <th>Düzenlenmiş</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PublisherName</td>
                            <td>
                                <a class="btn btn-success" href="/Publisher/Update?id=@item.Id"><i class="bi bi-pen"></i> Düzenle</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Emin misiniz?')" href="/Publisher/Delete?id=@item.Id"><i class="bi bi-trash"></i> Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

